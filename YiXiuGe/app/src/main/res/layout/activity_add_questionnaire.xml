<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/v_all_match_parent_no"
    tools:context=".ui.teacher.activity.AddQuestionnaireActivity">

    <include layout="@layout/include_centertitletoolbar" />

    <LinearLayout
        style="@style/v_match_parent"
        android:layout_marginTop="@dimen/d_10dp"
        android:paddingLeft="@dimen/d_10dp">


        <LinearLayout
            style="@style/h_match_parent_no"
            android:gravity="center_vertical">

            <ImageView
                style="@style/text"
                android:src="@drawable/class_name" />

            <EditText
                android:id="@+id/title_et"
                style="@style/match_parent"
                android:background="@drawable/border_bottom_divider"
                android:hint="@string/input_questionnaire_option"
                android:paddingBottom="@dimen/d_10dp"
                android:paddingLeft="@dimen/d_5dp"
                android:paddingRight="@dimen/d_10dp"
                android:paddingTop="@dimen/d_10dp" />

        </LinearLayout>

        <LinearLayout
            style="@style/h_match_parent_no"
            android:gravity="center_vertical">

            <ImageView
                style="@style/text"
                android:src="@drawable/class_time" />

            <LinearLayout
                android:paddingBottom="@dimen/d_10dp"
                android:paddingLeft="@dimen/d_5dp"
                android:paddingRight="@dimen/d_10dp"
                android:paddingTop="@dimen/d_10dp"
                android:background="@drawable/border_bottom_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/start_time_tv"
                    android:layout_width="150dp"
                    style="@style/text"
                    android:hint="开始时间" />
                <TextView
                    style="@style/text"
                    android:text=" --  " />
                <TextView
                    android:id="@+id/end_time_tv"
                    android:layout_width="150dp"
                    style="@style/text"
                    android:gravity="center"
                    android:hint="结束时间" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            style="@style/h_match_parent_no"
            android:gravity="center_vertical">

            <ImageView
                style="@style/text"
                android:src="@drawable/teacher_num" />

            <LinearLayout
                android:id="@+id/ll_student_num"
                style="@style/match_parent"
                android:background="@drawable/border_bottom_divider"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/d_10dp"
                android:paddingLeft="@dimen/d_5dp"
                android:paddingRight="@dimen/d_10dp"
                android:paddingTop="@dimen/d_10dp">

                <TextView
                    android:id="@+id/student_num_tv"
                    style="@style/text_weight"
                    android:hint="@string/choose_students" />

                <ImageView

                    style="@style/text"
                    android:src="@drawable/in_right" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/h_match_parent_no"
            android:paddingTop="@dimen/d_5dp">

            <ImageView
                style="@style/text"
                android:layout_marginTop="@dimen/d_5dp"
                android:src="@drawable/teacher_attention" />

            <LinearLayout
                style="@style/match_parent"
                android:layout_marginRight="@dimen/d_10dp"
                android:background="@drawable/border_bottom_divider"
                android:paddingBottom="@dimen/d_10dp">

                <TextView
                    style="@style/text"
                    android:padding="@dimen/d_5dp"
                    android:text="注意" />

                <EditText
                    android:id="@+id/notice_et"
                    style="@style/text12color666"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_80dp"
                    android:gravity="top"
                    android:background="@drawable/class_details"
                    android:hint="请输入注意事项"
                     />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_question_num"
            style="@style/h_match_parent_no"
            android:gravity="center_vertical">

            <ImageView
                style="@style/text"
                android:src="@drawable/teacher_subject" />

            <LinearLayout
                style="@style/match_parent"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/d_10dp"
                android:paddingLeft="@dimen/d_5dp"
                android:paddingRight="@dimen/d_10dp"
                android:paddingTop="@dimen/d_10dp">

                <TextView
                    android:id="@+id/question_num_tv"
                    style="@style/text_weight"
                    android:padding="@dimen/d_5dp"
                    android:hint="请选择题目" />

                <ImageView
                    style="@style/text"
                    android:src="@drawable/in_right" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
