<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/v_match_parent"
    android:layout_marginBottom="@dimen/d_5dp"
    android:layout_marginTop="@dimen/d_5dp">


    <TextView
        android:id="@+id/title_tv"
        style="@style/text"
        android:gravity="center"
        android:paddingBottom="@dimen/d_3dp"
        android:padding="@dimen/d_10dp"
        android:drawableLeft="@drawable/class_name" />

    <TextView style="@style/line_H1dp_divider" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:paddingLeft="@dimen/d_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
