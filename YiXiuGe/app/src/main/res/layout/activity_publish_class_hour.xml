<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:calendarview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/v_all_match_parent_no"
    tools:context=".ui.teacher.activity.PublishClassHourActivity">

    <include layout="@layout/include_centertitletoolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout style="@style/v_all_match_parent_no">


            <LinearLayout
                android:id="@+id/ll_subjects"
                style="@style/ll_bottom_h"
                android:layout_marginTop="@dimen/d_10dp"
                android:padding="@dimen/d_10dp">

                <TextView
                    style="@style/text_weight"
                    android:text="选择科目"
                    android:textColor="@color/color666" />

                <TextView
                    android:id="@+id/subjects_tv"
                    style="@style/text"
                    android:drawableRight="@drawable/in_right" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom_divider"
                android:padding="@dimen/d_10dp">

                <TextView
                    android:id="@+id/class_u_tv"
                    android:text="@string/class_select"
                    style="@style/text14color666" />


                <TextView
                    android:id="@+id/class_tv"
                    style="@style/text"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/class_u_tv"
                    android:drawableRight="@drawable/in_right"
                    android:gravity="right" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom_divider"
                android:padding="@dimen/d_10dp">

                <TextView
                    android:id="@+id/title_u_tv"
                    style="@style/text14color666"
                    android:text="标题" />


                <EditText
                    android:layout_marginLeft="@dimen/d_10dp"
                    android:id="@+id/title_et"
                    style="@style/text"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/title_u_tv"
                    android:background="@null"
                    android:hint="@string/input_title"
                    android:gravity="right" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom_divider"
                android:padding="@dimen/d_10dp">

                <TextView
                    android:id="@+id/teaching_methods_u_tv"
                    style="@style/text14color666"
                    android:text="教学方式" />


                <EditText
                    android:layout_marginLeft="@dimen/d_10dp"
                    android:id="@+id/teaching_methods_et"
                    style="@style/text"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/teaching_methods_u_tv"
                    android:background="@null"
                    android:hint="@string/input_teaching_methods"
                    android:gravity="right" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_classroom"
                style="@style/ll_bottom_h"
                android:padding="@dimen/d_10dp">

                <TextView
                    style="@style/text_weight"
                    android:text="所在教室"
                    android:textColor="@color/color666" />

                <TextView
                    android:id="@+id/classroom_tv"
                    style="@style/text"
                    android:drawableRight="@drawable/in_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_start_time"
                style="@style/ll_bottom_h"
                android:padding="@dimen/d_10dp">

                <TextView
                    style="@style/text_weight"
                    android:text="开始时间"
                    android:textColor="@color/color666" />

                <TextView
                    android:id="@+id/start_time_tv"
                    style="@style/text"
                    android:drawableRight="@drawable/in_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_end_time"
                style="@style/ll_bottom_h"
                android:padding="@dimen/d_10dp">

                <TextView
                    style="@style/text_weight"
                    android:text="结束时间"
                    android:textColor="@color/color666" />

                <TextView
                    android:id="@+id/end_time_tv"
                    style="@style/text"
                    android:drawableRight="@drawable/in_right" />

            </LinearLayout>


            <LinearLayout style="@style/v_match_parent">

                <TextView
                    style="@style/text"
                    android:layout_margin="@dimen/d_10dp"
                    android:text="@string/remark" />

                <EditText
                    android:id="@+id/remark_et"
                    style="@style/text14color666"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/d_10dp"
                    android:layout_marginLeft="@dimen/d_10dp"
                    android:layout_marginRight="@dimen/d_10dp"
                    android:background="@drawable/class_details"
                    android:hint="@string/input_remark"
                    android:lineSpacingMultiplier="1.3" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
