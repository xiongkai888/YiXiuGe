<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/v_all_match_parent_no"
    tools:context="com.lanmei.yixiu.ui.mine.activity.ExaminationResultActivity">

    <include layout="@layout/include_centertitletoolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout style="@style/v_all_match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/color1593f0">

                <TextView
                    style="@style/text14colorWhite"
                    android:layout_margin="@dimen/d_10dp"
                    android:text="得分" />

                <TextView
                    android:id="@+id/score_tv"
                    style="@style/text14colorWhite"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textSize="80sp" />


                <TextView
                    android:id="@+id/total_points_tv"
                    style="@style/text14colorWhite"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/d_10dp" />

            </RelativeLayout>


            <LinearLayout
                style="@style/h_match_parent_no"
                android:background="@color/color2E9EF2"
                android:padding="@dimen/d_10dp">

                <TextView
                    android:id="@+id/number1_tv"
                    style="@style/text_weight"
                    android:gravity="center"
                    android:text="试题量\n0道"
                    android:textColor="@color/white" />

                <TextView
                    android:background="@color/white"
                    style="@style/line_v1dp_divider" />

                <TextView
                    android:id="@+id/number2_tv"
                    style="@style/text_weight"
                    android:gravity="center"
                    android:text="答题数\n0道"
                    android:textColor="@color/white" />

                <TextView
                    android:background="@color/white"
                    style="@style/line_v1dp_divider" />

                <TextView
                    android:id="@+id/accuracy_tv"
                    style="@style/text_weight"
                    android:gravity="center"
                    android:text="正确率\n0%"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                style="@style/h_match_parent_no"
                android:gravity="center_vertical"
                android:padding="@dimen/d_10dp">

                <TextView
                    android:id="@+id/number3_tv"
                    style="@style/text14color666"
                    android:layout_weight="1"
                    android:text="共0道   您答对0道" />

                <TextView
                    android:layout_width="@dimen/d_15dp"
                    android:layout_height="@dimen/d_15dp"
                    android:background="@color/colorFF4A4A" />

                <TextView
                    style="@style/text"
                    android:layout_marginLeft="@dimen/d_5dp"
                    android:text="错误"
                    android:textColor="@color/colorFF4A4A" />

                <TextView
                    android:layout_width="@dimen/d_15dp"
                    android:layout_height="@dimen/d_15dp"
                    android:layout_marginLeft="@dimen/d_20dp"
                    android:background="@color/color0cc215" />

                <TextView
                    style="@style/text"
                    android:layout_marginLeft="@dimen/d_5dp"
                    android:text="正确"
                    android:textColor="@color/color0cc215" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
