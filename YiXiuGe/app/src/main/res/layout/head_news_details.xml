<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/v_match_parent">


    <TextView
        android:id="@+id/title_tv"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:padding="@dimen/d_10dp"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_5dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <com.xson.common.widget.CircleImageView
                android:id="@+id/head_iv"
                android:layout_width="@dimen/d_50dp"
                android:layout_height="@dimen/d_50dp"
                android:src="@drawable/default_pic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_tv"
                    style="@style/text"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/time_tv"
                    style="@style/text12colorBlack"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="2018-8-23 20:59" />


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/collect_tv"
            style="@style/text12color666"
            android:layout_marginLeft="10dp"
            android:background="@drawable/examination_button_bg"
            android:gravity="center"
            android:text="@string/collected" />
    </LinearLayout>


    <TextView
        android:id="@+id/time_sub_tv"
        style="@style/text10color999"
        android:layout_marginLeft="15dp" />


    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/d_5dp"
        android:layout_marginLeft="@dimen/d_5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/cname_tv"
            style="@style/text10color999"
            android:text="资讯" />

        <TextView
            android:id="@+id/comment_tv"
            style="@style/text10color999"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/time1_tv"
            style="@style/text10color999"
            android:layout_marginLeft="10dp"
            android:text="2018-8-23 20:59" />

    </LinearLayout>
</LinearLayout>