<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:calendarview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/v_all_match_parent_no"
    tools:context=".ui.teacher.activity.PublishCourseActivity">

    <include layout="@layout/include_centertitletoolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom_top_divider"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="@dimen/d_10dp"
        android:padding="@dimen/d_10dp">

        <EditText
            android:id="@+id/video_title_et"
            style="@style/match_parent"
            android:hint="@string/input_video_title"
            android:background="@null" />

        <ImageView
            android:id="@+id/video_pic_tv"
            android:layout_marginTop="@dimen/d_10dp"
            android:src="@drawable/icon_select"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/d_100dp"
            android:layout_height="@dimen/d_100dp" />

        <TextView
            android:id="@+id/video_name_tv"
            android:layout_marginTop="@dimen/d_10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        style="@style/ll_bottom_h"
        android:layout_marginTop="@dimen/d_10dp"
        android:padding="@dimen/d_10dp">

        <TextView
            style="@style/text_weight"
            android:text="选择分类"
            android:textColor="@color/color666" />

        <TextView
            android:id="@+id/name_tv"
            style="@style/text"
            android:layout_marginRight="@dimen/d_10dp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
