<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF4F4"
    android:orientation="vertical">

    <include layout="@layout/include_centertitletoolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/user_protocol_tv"
                style="@style/match_parent"
                android:layout_marginTop="@dimen/d_10dp"
                android:background="@drawable/border_bottom_divider"
                android:drawableRight="@drawable/in_right"
                android:gravity="center_vertical"
                android:padding="@dimen/d_10dp"
                android:text="用户协议"
                android:textColor="@color/color666" />


            <LinearLayout
                android:id="@+id/ll_clean_cache"
                style="@style/ll_bottom_h"
                android:paddingLeft="@dimen/d_10dp">

                <TextView
                    style="@style/setting_text"
                    android:text="清除缓存" />

                <TextView
                    android:id="@+id/cache_count"
                    style="@style/text"
                    android:layout_marginRight="5dp"
                    android:drawableRight="@drawable/in_right"
                    android:gravity="center_vertical"
                    android:text="0KB" />

            </LinearLayout>

            <TextView
                android:id="@+id/version_information_tv"
                style="@style/match_parent"
                android:background="@drawable/border_bottom_divider"
                android:drawableRight="@drawable/in_right"
                android:gravity="center_vertical"
                android:padding="@dimen/d_10dp"
                android:text="版本信息"
                android:textColor="@color/color666" />

            <TextView
                android:id="@+id/change_password_tv"
                style="@style/match_parent"
                android:background="@drawable/border_bottom_divider"
                android:drawableRight="@drawable/in_right"
                android:gravity="center_vertical"
                android:padding="@dimen/d_10dp"
                android:text="修改密码"
                android:textColor="@color/color666" />
            <TextView
                android:id="@+id/about_us_tv"
                style="@style/match_parent"
                android:background="@drawable/border_bottom_divider"
                android:drawableRight="@drawable/in_right"
                android:gravity="center_vertical"
                android:padding="@dimen/d_10dp"
                android:text="@string/about_us"
                android:textColor="@color/color666" />

        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/back_login"
        style="@style/button_style"
        android:text="退出登录" />

</LinearLayout>
