<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:calendarview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/v_all_match_parent_no"
    tools:context=".ui.teacher.activity.AddCheckInActivity">

    <include layout="@layout/include_centertitletoolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout style="@style/v_all_match_parent_no">


            <LinearLayout
                android:id="@+id/ll_student"
                style="@style/ll_bottom_h"
                android:layout_marginTop="@dimen/d_10dp"
                android:padding="@dimen/d_10dp">

                <TextView
                    style="@style/text_weight"
                    android:text="学生姓名"
                    android:textColor="@color/color666" />

                <TextView
                    android:id="@+id/student_tv"
                    style="@style/text"
                    android:drawableRight="@drawable/in_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_check_type"
                style="@style/ll_bottom_h"
                android:padding="@dimen/d_10dp">

                <TextView
                    style="@style/text_weight"
                    android:text="出勤类型"
                    android:textColor="@color/color666" />

                <TextView
                    android:id="@+id/check_type_tv"
                    style="@style/text"
                    android:drawableRight="@drawable/in_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_check_in_time"
                style="@style/ll_bottom_h"
                android:padding="@dimen/d_10dp">

                <TextView
                    style="@style/text_weight"
                    android:text="出勤时间"
                    android:textColor="@color/color666" />

                <TextView
                    android:id="@+id/check_in_time_tv"
                    style="@style/text"
                    android:drawableRight="@drawable/in_right" />

            </LinearLayout>


            <LinearLayout style="@style/v_match_parent">

                <TextView
                    style="@style/text"
                    android:layout_margin="@dimen/d_10dp"
                    android:text="@string/remark" />

                <EditText
                    android:id="@+id/remark_et"
                    style="@style/text14color666"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/d_10dp"
                    android:layout_marginLeft="@dimen/d_10dp"
                    android:layout_marginRight="@dimen/d_10dp"
                    android:background="@drawable/class_details"
                    android:hint="@string/input_remark" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
