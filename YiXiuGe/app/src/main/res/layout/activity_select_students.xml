<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/v_all_match_parent_no"
    tools:context="com.medui.yixiu.ui.teacher.activity.SelectStudentsActivity">

    <include layout="@layout/include_centertitletoolbar" />


    <LinearLayout
        android:id="@+id/ll_choose"
        android:visibility="gone"
        style="@style/h_match_parent">


        <LinearLayout
            android:id="@+id/ll_all_select"
            android:layout_width="@dimen/d_120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/all_select_iv"
                style="@style/text"
                android:paddingBottom="@dimen/d_10dp"
                android:paddingLeft="@dimen/d_10dp"
                android:paddingRight="@dimen/d_5dp"
                android:paddingTop="@dimen/d_10dp"
                android:src="@drawable/pay_off" />

            <TextView
                android:id="@+id/all_select_tv"
                style="@style/text"
                android:text="全选" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_invert_select"
            android:layout_width="@dimen/d_120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/invert_select_iv"
                style="@style/text"
                android:paddingBottom="@dimen/d_10dp"
                android:paddingLeft="@dimen/d_10dp"
                android:paddingRight="@dimen/d_5dp"
                android:paddingTop="@dimen/d_10dp"
                android:src="@drawable/pay_off" />

            <TextView
                android:id="@+id/invert_select_tv"
                style="@style/text"
                android:text="反选" />

        </LinearLayout>


    </LinearLayout>

    <TextView style="@style/line_H1dp_divider" />

    <include layout="@layout/single_recyclerview" />


</LinearLayout>
